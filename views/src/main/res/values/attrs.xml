<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Popular attributes-->
    <attr name="zp_fontFace" format="enum">
        <enum name="iran_sans_light" value="0"/>
        <enum name="iransans_ulight" value="1"/>
        <enum name="iransans_bold" value="2"/>
        <enum name="ocra" value="3"/>
    </attr>
    <attr name="zp_textFormat" format="enum">
        <enum name="normal" value="0"/>
        <enum name="pan" value="1"/>
        <enum name="currency" value="2"/>
        <enum name="jalali_date" value="3"/>
    </attr>


    <declare-styleable name="ZarinTextView">
        <attr name="zp_fontFace"/>
        <attr name="zp_textFormat"/>
        <attr name="zp_longCopy" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ZarinButton">
        <attr name="android:padding"/>
        <attr name="zp_fontFace"/>
        <attr name="zp_rippleColor" format="color"/>
        <attr name="zp_firstColor" format="color"/>
        <attr name="zp_secondColor" format="color"/>
        <attr name="zp_cornerRadius" format="integer"/>
        <attr name="zp_pressColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ZarinEditText">
        <attr name="android:inputType"/>
        <attr name="android:maxLength"/>
        <attr name="android:textSize"/>
        <attr name="android:hint"/>
        <attr name="android:maxLines"/>
        <attr name="android:gravity" />
        <attr name="android:textColor" />
        <attr name="android:text" />
        <attr name="android:textColorHint" />
        <attr name="zp_fontFace"/>
        <attr name="zp_leftFirstIcon" format="integer"/>
        <attr name="zp_leftSecondIcon" format="integer"/>
        <attr name="zp_rightIcon" format="integer"/>
        <attr name="zp_textGravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>


</resources>